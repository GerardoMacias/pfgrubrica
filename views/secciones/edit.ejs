<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <!-- Menu ppal -->
            <% include ../partials/menu-principal %>
        </div>
        <div class="col-md-9">
            <div class="panel panel-default">
                <!-- Default panel contents -->
                <h1 style="text-align: center">Editar <% if(secc.es_criterio) {%>criterio<%}else{%>sección<%}%> de rúbrica</h1>
                <hr>
                <!--  -->


                <div style="width: 90%; margin: 25px auto;">
                    <form id="formEditSeccion" action="/plantillas/<%=secc.idrubrica%>/secciones/<%=secc.idsecciones%>?_method=PUT" method="POST">
                        <div class="row form-group">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="well well-sm">
                                    <div class="row form-group">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <p class="text-left"><b>Sección a editar:</b></p>
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                            <label class="control-label">Nivel: </label><p><%=secc.nivel%></p>
                                        </div>
                                        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                            <label class="control-label">Peso: </label>
                                            <input class="form-control pesos" type="text" id="nuevo_peso" name="nuevo_peso" value="<%=secc.peso%>" required autofocus>
                                        </div>
                                        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                                            <label class="control-label">Descripción: </label>
                                            <input class="form-control" type="text" id="nuevo_preg" name="nuevo_preg" value="<%=secc.descripcion%>" required>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                            
                        <% var i=0,j=0; %>
                        <% if (hermanos.length>1){%>
                            <div class="row form-group">
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                </div>
                                <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
                                    <label class="control-label">Actualice los pesos del resto de <% if(secc.es_criterio){ %>criterios<% } else {%>secciones<%};%></label>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                </div>
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                    <label class="control-label">Peso</label>
                                </div>
                                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                                    <label class="control-label">Descripción</label>
                                </div>
                            </div>
                            <% while(i<hermanos.length){ %>
                                <% if(hermanos[i].idsecciones==secc.idsecciones){%>
                                    <% j--;%>
                                <% } else {%>
                                    <div class="row form-group">
                                        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                            <input type="hidden" id="upd_id_<%=j%>" name="upd_id[<%=j%>]" value="<%=hermanos[i].idsecciones%>">
                                        </div>
                                        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                            <input class="form-control pesos" type="text" id="upd_peso_<%=j%>" name="upd_peso[<%=j%>]" value="<%=hermanos[i].peso%>" <%if(i==0){%>autofocus<%}%> >
                                        </div>
                                        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                                            <p><%=hermanos[i].descripcion%></p>
                                        </div>
                                    </div>
                                <% }; %>
                                <% i++;j++; %>
                            <% }; %>
                        <% }; %>

                        <div class="row form-group">
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">

                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                <% if (hermanos.length>1){%>
                                    <label class="control-label" >Total:</label>
                                <% };%>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                <input class="form-control suma_total" type="<% if (hermanos.length>1){%>text<%}else{%>hidden<% };%>" id="pesos_totales" name="pesos_totales" disabled >
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <button class="btn btn-lg btn-primary btn-block">Editar</button>
                        </div>

                    </form>


                    <a href="/plantillas/<%=secc.idrubrica%>/edit">Volver</a>
                </div>   
                
            </div>  
        </div>
    </div>
</div>


<script src="/scripts/secciones_editar.js"></script>

<% include ../partials/footer %>


