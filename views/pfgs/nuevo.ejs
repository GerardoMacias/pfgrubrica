
<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <!-- Menu ppal -->
            <% include ../partials/menu-principal %>
        </div>
        <div class="col-md-9">
            <div class="panel panel-default">
                <!-- Default panel contents -->
                <h1 style="text-align: center">Nuevo PFG</h1>
                <hr>
                <!--  -->
                
                <div class="panel-body">
                    <div style="width: 90%; margin: 25px auto;">
                        <form id="formNuevoPFG" action="/pfgs" method="POST">
                            <div class="row form-group">
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                    <label class="control-label ">Título</label>
                                </div>
                                <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
                                    <input class="form-control" type="text" id="titulo" name="titulo" placeholder="Título" required autofocus>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                    <label class="control-label ">Descripción</label>
                                </div>
                                <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
                                    <input class="form-control" type="text" id="descripcion" name="descripcion" placeholder="Descripción" required >
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                    <label class="control-label ">Código PFG propuesto</label>
                                </div>
                                <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
                                    <input class="form-control" type="text" id="propuesto" name="propuesto" placeholder="Código PFG propuesto" style="width:auto;">
                                </div>
                            </div>
                            <% if(typeof alums !== 'undefined'){ %>
                            <div class="row form-group">
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                    <label class="control-label ">Alumno</label>
                                </div>
                                <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
                                    <select class="form-control" id="alumno" name="alumno" style="width:auto;">
                                        <option value="no_asignado">No asignado</option>
                                            <% alums.forEach(function(a){ %>
                                                <option value="<%= a.idusuarios %>"><%= a.apellidos %>, <%= a.nombre %></option>
                                            <% }); %>
                                    </select>      
                                </div>
                            </div>
                            <% }; %>
                            <% if(typeof profs !== 'undefined'){ %>
                            <div class="row form-group">
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                    <label class="control-label ">Tutor</label>
                                </div>
                                <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
                                    <select class="form-control" id="tutor" name="tutor" style="width:auto;">
                                            <% profs.forEach(function(p){ %>
                                                <option value="<%= p.idusuarios %>"><%= p.apellidos %>, <%= p.nombre %></option>
                                            <% }); %>
                                    </select>      
                                </div>
                            </div>
                            <% }; %>
                            <% if(typeof rubs !== 'undefined'){ %>
                            <div class="row form-group">
                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                    <label class="control-label ">Rúbrica</label>
                                </div>
                                <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
                                    <select class="form-control" id="rubrica" name="rubrica" style="width:auto;">
                                            <% rubs.forEach(function(r){ %>
                                                <option value="<%= r.idrubrica %>"><%= r.titulo %></option>
                                            <% }); %>
                                    </select>      
                                </div>
                            </div>
                            <% }; %>
                            <div style="width: 50%; margin: 25px auto;">
                                <div class="form-group">
                                    <button class="btn btn-lg btn-primary btn-block">Alta</button>
                                    <a href="/pfgs">Volver</a>
                                </div>
                            </div>

                        </form>
                    </div>  
                </div>

            </div> <!-- panel -->

        </div>
    </div>
</div>

<script src="/scripts/pfgs_nuevo.js"></script>

<% include ../partials/footer %>